    <section id="loginForm">
        <div id='MainDiv'>
            <div id='ApplicationTabs'>
                <div id='ApplicationTabs-1'>
                    <table class='WebFormTable' id='tbl' validateonsubmit=true>
                        <tr><td class='formSection' colspan='4'>Post Flight Report Information</td></tr>
                        <tr class="DateWiseRow">
                            <td class=' formlabel' title='Airline'>
                                <font color='red'>*</font><span id='spnAirlineCode'>
                                    Airline
                                </span>
                            </td>
                            <td class='formInputcolumn'>
                                @Html.Hidden("AirlineCode")
                                @Html.TextBox("Text_AirlineCode", null, new { data_valid = "required", controltype = "autocomplete", data_role = "autocomplete", data_valid_msg = "Airline Name can not be blank" })
                            </td>


                            <td class=' formlabel' title='Flight No'>
                                <font color='red'></font><span id='spnAirlineCode'>
                                    Flight No
                                </span>
                            </td>
                            <td class='formInputcolumn'>
                                @Html.Hidden("FlightSNo")
                                @Html.TextBox("Text_FlightSNo", null, new { controltype = "autocomplete", data_role = "autocomplete" })
                            </td>
                        </tr>



                        <tr class="DateWiseRow">
                            <td class=' formlabel' title='Origin'>
                                <font color='red'>*</font><span id='spnAirlineCode'>
                                    Origin :
                                </span>
                            </td>
                            <td class='formInputcolumn'>
                                @Html.Hidden("OriginSNo")
                                @Html.TextBox("Text_OriginSNo", null, new { data_valid = "required", controltype = "autocomplete", data_role = "autocomplete", data_valid_msg = "Origin can not be blank" })
                            </td>
                            <td class=' formlabel' title='Destination'>
                                <font color='red'></font><span id='spnAirlineCode'>
                                    Destination :
                                </span>
                            </td>
                            <td class='formInputcolumn'>
                                @Html.Hidden("DestinationSNo")
                                @Html.TextBox("Text_DestinationSNo", null, new { controltype = "autocomplete", data_role = "autocomplete" })
                            </td>
                        </tr>

                        <tr class="DateWiseRow">
                            <td class=' formlabel' title='From Date'>
                                <font color='red'></font><span id='spnAirlineCode'>
                                    From Date :
                                </span>
                            </td>
                            <td class='formInputcolumn'>
                                <input type='text' name='FromDate' id='FromDate' style='width: 133px;' data-valid='required'
                                       data-role="datepicker" data-valid-msg='Select From Date' controltype='datetype' value='' placeholder='From Date' />
                            </td>
                            <td class=' formlabel' title='To Date'>
                                <font color='red'>*</font><span id='spnAirlineCode'>
                                    To Date :
                                </span>
                            </td>
                            <td class='formInputcolumn'>
                                <input type='text' name='ToDate' id='ToDate' style='width: 133px;' data-valid='required'
                                       data-role="datepicker" data-valid-msg='Select From To Date' controltype='datetype' value='' placeholder='To Date' />
                            </td>
                        </tr>
                        <tr>
                            <td class=' formlabel'>
                               
                                    <div id="exportflight" style="float:left;"><img id="imgexcel" src="../Images/IconExcel.png" style="width:30px;height:30px;cursor: pointer" title="Export To Excel" onclick="ExportToExcel_PostFlight()" /> </div>
                              
                            </td>
                            <td class='formInputcolumn'>
                                <input type='submit' name='operation' onclick="SearchPostFlightReport()" value='Search' id="btnSearch" class='btn btn-success btnSearch' />
                            </td>
                            <td class=' formlabel'></td>
                            <td class='formInputcolumn'></td>
                        </tr>
                    </table>
                    <br />
                    <br />



                   

                    <table id='tbl'></table>
                    <div id="FlightDetails">


                    </div>
                </div>

            </div>
