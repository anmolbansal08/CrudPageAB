<style type="text/css">
    .completeprocess {
        color: #fff;
        background-color: #51a351;
        border-color: #51a351;
        font-size: 10px;
    }

    .incompleteprocess {
        color: #fff;
        background-color: #428bca;
        border-color: #357ebd;
        font-size: 10px;
    }

    .partialprocess {
        color: #fff;
        background-color: #FE9D5A;
        border-color: #FE9D5A;
        font-size: 10px;
    }

    .failureprocess {
        color: #fff;
        background-color: #FE0404;
        border-color: #FE9D5A;
        font-size: 10px;
    }

    .dependentprocess {
        color: #fff;
        background-color: brown;
        border-color: goldenrod;
        font-size: 10px;
    }

    .k-grid-filter {
        display: none;
    }

    .k-link {
        cursor: text;
    }
</style>

@*@model CargoFlash.Cargo.Model.Report.AccelaeroReport*@
<div id="divbody" style="height:auto">



    <table class='WebFormTable' id='tbl' validateonsubmit=true>
        <tr><td class='formSection' colspan='10'>Billing Report</td></tr>
        <tr><td class='formlabel' colspan='10'><div class='MandatoryTextCss'><font color='red'>*</font> Mandatory Fields</div></td></tr>


        <tr class="DateWiseRow">
            <td class='formlabel'><font color='red'>*</font>Airline</td>
            <td class='formInputcolumn'>

                @Html.Hidden("AirlineCode")
                @Html.TextBox("Text_AirlineCode", null, new { data_valid = "required", controltype = "autocomplete", data_role = "autocomplete", data_valid_msg = "Select Airline" })
            </td>
            <td class="formlabel"><font color='red'>*</font>Date Type</td>
            <td class='formInputcolumn'>
                <input type="radio" value="1" name="date" id="Booking_Date" checked="checked">Booking Date
                <input type="radio" value="0" name="date" id="Flight_Date">Flight Date
            </td>
            <td class="formlabel">Product</td>
            <td class="formInputcolumn">
                @Html.Hidden("Product")
                @Html.TextBox("Text_Product", null, new { controltype = "autocomplete", data_role = "autocomplete" })
            </td>
        </tr>
        <tr class="DateWiseRow">
            <td class="formlabel"><font color='red'></font>Origin</td>
            <td class="formInputcolumn">
                @Html.Hidden("Origin")
                @Html.TextBox("Text_Origin", null, new { controltype = "autocomplete", data_role = "autocomplete" })
            </td>

            <td class="formlabel">Destination</td>
            <td class="formInputcolumn">
                @Html.Hidden("Destination")
                @Html.TextBox("Text_Destination", null, new { controltype = "autocomplete", data_role = "autocomplete" })
            </td>
            <td class="formlabel">Aircraft</td>
            <td class="formInputcolumn">
                @Html.Hidden("aircraft")
                @Html.TextBox("Text_aircraft", null, new { controltype = "autocomplete", data_role = "autocomplete" })
            </td>
        </tr>
        <tr class="DateWiseRow">
            <td class="formlabel"><font color='red'></font>Agent</td>
            <td class="formInputcolumn">
                @Html.Hidden("Agent")
                @Html.TextBox("Text_Agent", null, new { controltype = "autocomplete", data_role = "autocomplete" })
            </td>

            <td class="formlabel">Commodity</td>
            <td class="formInputcolumn">
                @Html.Hidden("Commodity")
                @Html.TextBox("Text_Commodity", null, new { controltype = "autocomplete", data_role = "autocomplete" })

            <td class="formlabel"><font color='red'></font>SHC</td>
            <td class="formInputcolumn">
                @Html.Hidden("SHC")
                @Html.TextBox("Text_SHC", null, new { controltype = "autocomplete", data_role = "autocomplete" })
            </td>

        </tr>
        <tr class="DateWiseRow">
            <td class="formlabel"><font color='red'></font>AWBNo.</td>
            <td class="formInputcolumn">
                @Html.Hidden("AWBNo")
                @Html.TextBox("Text_AWBNo", null, new { controltype = "autocomplete", data_role = "autocomplete" })
            </td>

            <td class="formlabel">FlightNo</td>
            <td class="formInputcolumn">
                @Html.Hidden("FlightNo")
                @Html.TextBox("Text_FlightNo", null, new { controltype = "autocomplete", data_role = "autocomplete" })

        </tr>
        <tr class="DateWiseRow">
            <td class="formlabel"><font color='red'>*</font>From Date</td>
            <td class="formInputcolumn">@Html.TextBox("FromDate", null, new { data_valid = "required", data_valid_msg = "Select FromDate" })</td>
            <td class="formlabel"><font color='red'>*</font>To Date</td>
            <td class="formInputcolumn" colspan="6">@Html.TextBox("ToDate", null, new { data_valid = "required", data_valid_msg = "Select ToDate" })</td>



        <tr class="DateWiseRow">

            <td class='formInputcolumn' colspan="10">
                <input type='submit' name='operation' onclick="Search()" value='Search' class='btn btn-success' id="btnSearch" />
                <input type='submit' onclick="ExportToExcel()" name='operation' value='Export to Excel' class='btn btn-success' id="btnExportToExcel_FlightDetail" />&nbsp;
                <input type='submit' onclick="Generate_PDF()" name='operation' value='Export to PDF' class='btn btn-success' id="btnExportToPDF" />
            </td>
        </tr>

    </table>


</div>
<div id="grid" style="font-size:11px;"></div>
<script src="~/JScript/Report/BillingReport.js"></script>