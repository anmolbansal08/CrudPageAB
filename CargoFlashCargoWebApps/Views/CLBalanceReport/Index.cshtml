<style type="text/css">
    .k-grid-header th.k-header > .k-link {
        cursor: auto;
    }
</style>


<div id="divbody" style="height:auto">
    <table class='WebFormTable' id='tbl' validateonsubmit=true>
        <tr><td class='formSection' colspan='4'>CL Balance Report</td></tr>
        <tr class="DateWiseRow">
            <td class=' formlabel' title='Airline'>
                <font color='red'>*</font><span id='spnAirlineCode'>
                    Airline
                </span>
            </td>
            <td class='formInputcolumn'>
                @Html.Hidden("AirlineSNo")
                @Html.TextBox("Text_AirlineSNo", null, new { data_valid = "required", controltype = "autocomplete", data_role = "autocomplete", data_valid_msg = "Airline Name can not be blank" })
            </td>

            <td class=' formlabel'>

            </td>
           


        </tr>
        <tr class='formSection'>

            <td class="formlabel"><font color='red'></font>Origin</td>
            <td class="formInputcolumn">

                @Html.Hidden("CitySNo")
                @Html.TextBox("Text_CitySNo", null, new { controltype = "autocomplete", data_role = "autocomplete" })

            </td>
            <td class="formlabel">Currency</td>
            <td class="formInputcolumn">

                @Html.Hidden("CurrencySNo")
                @Html.TextBox("Text_CurrencySNo", null, new { controltype = "autocomplete", data_role = "autocomplete" })


            </td>

        </tr>
        <tr class="DateWiseRow">
            <td class=' formlabel' title='From Date'>
                @*<font color='red'>*</font>*@<span id='spnAirlineCode'>
                    From Date :
                </span>
            </td>
            <td class='formInputcolumn'>
                <input type='text' name='ValidFrom' id='ValidFrom' style='width: 133px;' data-valid='required'
                       data-role="datepicker" data-valid-msg='Select From Date' controltype='datetype' value='' placeholder='From Date' />
            </td>
            <td class=' formlabel' title='To Date'>
                @*<font color='red'>*</font>*@<span id='spnAirlineCode'>
                    To Date :
                </span>
            </td>
            <td class='formInputcolumn'>
                <input type='text' name='ValidTo' id='ValidTo' style='width: 133px;' data-valid='required'
                       data-role="datepicker" data-valid-msg='Select From To Date' controltype='datetype' value='' placeholder='To Date' />
            </td>
        </tr>

        <tr class='formSection'>
            <td class="formlabel">@*<font color='red'>*</font>*@Type</td>
            <td class="formInputcolumn">
                <input type="radio" value="1" name="Type" id="Office" class="Office" checked="checked">Office
                <input type="radio" value="0" name="Type" id="Office" class="Agent">Agent
            </td>
            <td class=' formlabel'>

            </td>
        </tr>

        <tr class='formSection'>

            <td class="formlabel"><font color='red'></font>Office</td>
            <td class="formInputcolumn">

                @Html.Hidden("OfficeSNo")
                @Html.TextBox("Text_OfficeSNo", null, new { controltype = "autocomplete", data_role = "autocomplete" })

            </td>
            <td class="formlabel">Agent</td>
            <td class="formInputcolumn">

                @Html.Hidden("AccountSNo")
                @Html.TextBox("Text_AccountSNo", null, new { controltype = "autocomplete", data_role = "autocomplete" })


            </td>

        </tr>

        <tr>
            <td class="formlabel"></td>
            <td class='formInputcolumn'>
                <input type='submit' name='operation' onclick="CreateCLBalanceReportGrid()" value='Search' id="SearchTransactionHistory" class='btn btn-success btnSearch' />
            </td>
            <td class="formlabel"></td>
            <td class="formInputcolumn">

               <img id="imgexcel" src="../Images/IconExcel.png" style="width:30px;height:30px;cursor: pointer" onclick="ExportExcelHoldType()" title="Export To Excel" />      
            </td>

        </tr>
    </table>
    <br />
    <br />
</div>
<table id='tbl'></table>

<div id="example">
    <div id="grid" style="font-size:11px;"></div>
    <script src="~/JScript/Report/CLBalanceReport.js"></script>

</div>


