<style type="text/css">
    .k-grid-header th.k-header > .k-link {
        cursor: auto;
    }
</style>
<div id="divbody" style="height:auto">
    <table class='WebFormTable' id='tbl' validateonsubmit=true>
        <tr><td class='formSection' colspan='4'>Daily Report POD Information</td></tr>
        <tr class="DateWiseRow">
            <td class='formlabel' title='Airline'>
                <font color='red'>*</font><span id='spnAirlineCode'>
                    Airline
                </span>
            </td>
            <td class='formInputcolumn'>
                @Html.Hidden("AirlineSNo")
                @Html.TextBox("Text_AirlineSNo", null, new { data_valid = "required", controltype = "autocomplete", data_role = "autocomplete", data_valid_msg = "Airline Name can not be blank" })
            </td>
            <td class='formlabel' title='Airport'>
                <font color='red'>*</font><span id='spnAirport'>
                    Airport :
                </span>
            </td>
            <td class='formInputcolumn'>
                @Html.Hidden("DestAirportSNo")
                @Html.TextBox("Text_DestAirportSNo", null, new { data_valid = "required", controltype = "autocomplete", data_role = "autocomplete", data_valid_msg = "Airport can not be blank" })
            </td>
        </tr>
        <tr class="DateWiseRow">
            <td class='formlabel' title='From Date'>
                <font color='red'></font><span id='spnFromDate'>
                    From Date :
                </span>
            </td>
            <td class='formInputcolumn'>
                <input type='text' name='FromDate' id='FromDate' style='width: 133px;' data-valid='required'
                       data-role="datepicker" data-valid-msg='Select From Date' controltype='datetype' value='' placeholder='From Date' />
            </td>
            <td class='formlabel' title='To Date'>
                <font color='red'></font><span id='spnToDate'>
                    To Date :
                </span>
            </td>
            <td class='formInputcolumn'>
                <input type='text' name='ToDate' id='ToDate' style='width: 133px;' data-valid='required'
                       data-role="datepicker" data-valid-msg='Select To Date' controltype='datetype' value='' placeholder='To Date' />
            </td>
        </tr>
        <tr>
            <td class='formlabel'>
                <div id="exportflight" style="float:left;">
                    <img id="imgexcel" src="../Images/IconExcel.png" style="width:30px;height:30px;cursor: pointer" onclick="ExportExcelDailyReportPOD()" title="Export To Excel" />
                </div>
            </td>
            <td class='formInputcolumn'>
                <input type='submit' name='operation' onclick="SearchDailyReportPODRecord()" value='Search' id="btnSearch" class='btn btn-success btnSearch' />
            </td>
            <td class="formlabel"></td>
            <td class="formInputcolumn"></td>
        </tr>
    </table>
    <br />
    <br />
</div>
<table id='tbl'></table>
<div id="example">
    <div id="grid" style="font-size:11px;"></div>
    <script src="~/JScript/Report/DailyReportPOD.js"></script>
</div>


