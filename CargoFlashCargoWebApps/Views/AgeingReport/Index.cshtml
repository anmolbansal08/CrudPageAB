        <tr>
            <td class='formlabels_' colspan='8' style="text-align:center"><label id="lblReportHeader"></label></td>
        </tr>
        <tr>
            <td class='formlabels_'>GSA Name</td>
            <td class='formInputcolumns_' colspan='7'><label id="lblGSAName"></label></td>
        </tr>
        <tr>
            <td class='formlabels_'>GSA Code</td>
            <td class='formInputcolumns_'><label id="lblGSACode"></label></td>
            <td class='formlabels_'>AR Code</td>
            <td class='formInputcolumns_'><label id="lblARCode"></label></td>
            <td class='formlabels_'>Currency</td>
            <td class='formInputcolumns_'><label id="lblCurrency"></label></td>
            <td class='formlabels_'>Statement Date</td>
            <td class='formInputcolumns_'><label id="lblstmtDt"></label></td>
        </tr>
        <tr>
            <td class='formlabels_'>Total Invoiced Amount</td>
            <td class='formInputcolumns_'><label id="lblTotInvAmt"></label></td>
            <td class='formlabels_'>Total Receipt Amount</td>
