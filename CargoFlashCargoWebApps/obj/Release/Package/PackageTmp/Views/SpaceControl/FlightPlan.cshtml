<div>
    @using (Html.BeginForm("SpaceControl", "FlightDetails", FormMethod.Post, new { enctype = "multipart/form-data", @id = "aspnetForm" }))
    {
        <table class="WebFormTable">
            <tbody>
                <tr style="width: 100px; height:50px;">
                    <td class="formlabel">
                        <font color="red">*</font>
                        Flight Number:
                    </td>
                    <td class="formInputcolumn">
                        @Html.HiddenFor(m => m.FlightNo)
                        @Html.TextBox("Text_FlightNo", null, new { data_valid = "required", @data_valid_msg = "Select Flight Number", @required = "required", controltype = "autocomplete", data_role = "autocomplete", placeholder = "Select Flight" })
                    </td>
                    <td class="formlabel" style="width: 100px;">
                        <font color="red">*</font>
                        Flight Date:
                    </td>
                    <td class="formInputcolumn">
                        @Html.TextBox("FlightDate", null, new { data_valid = "required", @data_valid_msg = "Enter the Flight Date", @required = "required", placeholder = "Select Flight Date" })
                    </td>
                    <td class="formlabel" style="width: 100px;">
                        Airport:
                    </td>
                    <td class="formInputcolumn">
                        @Html.HiddenFor(m => m.Airport)
                        @Html.TextBox("Text_Airport", null, new { controltype = "autocomplete", data_role = "autocomplete", placeholder = "Select Airport" })
                    </td>
                    <td class="formbuttonrow" colspan="2">
                        <input type="button" tabindex="4" class="btn btn-success" onclick="SearchSpaceControlFlightDetails()" name="Search" style="width:80px;" value="Search">
                    </td>
                </tr>
            </tbody>
        </table>
    }
</div>
